---
import { languages } from '../i18n/ui';
const { lang } = Astro.props;
---
<ul class="flex gap-2">
  {Object.entries(languages).map(([code, label]) => (
    <li>
      <a
        href={`/${code}/`}
        class={`no-underline px-3 py-1 rounded-full border text-sm font-medium transition-colors duration-200
          ${lang === code ? 'bg-accent text-white border-accent' : 'bg-gray-800 text-gray-200 border-gray-600 hover:bg-accent hover:text-white hover:border-accent'}`}
        aria-current={lang === code ? 'page' : undefined}
      >
        {label}
      </a>
    </li>
  ))}
</ul>