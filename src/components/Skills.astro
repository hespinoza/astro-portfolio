---
const { t, lang } = Astro.props;
---

<section>
  <h2 class="text-2xl font-bold mb-4">{t('skills.title')}</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div>
      <h3 class="font-semibold mb-2">{t('skills.tech.title')}</h3>
      <ul class="list-disc list-inside text-base text-gray-200 space-y-1" set:html={t('skills.tech.list')}></ul>
    </div>
    <div>
      <h3 class="font-semibold mb-2">{t('skills.soft.title')}</h3>
      <ul class="list-disc list-inside text-base text-gray-200 space-y-1" set:html={t('skills.soft.list')}></ul>
    </div>
  </div>
</section>
